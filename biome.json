{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",

  "json": {
    "parser": {
      "allowComments": true
    }
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "complexity": {
        "useLiteralKeys": "off"
      }
    }
  },

  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true
    }
  }
}
